.row
  .col-md-9
    - if @category
      %h3= @category.name +  " Wiki's"
    - @articles.each do |article|
      %h2= link_to article.title, article
      %p= truncate(markdown(article.content), length:200)
      %p
        Published at
        = article.created_at.strftime('%I:%M%p, %b %d, %Y')
  .col-md-3
    %h2
      %li= link_to "Categories", categories_path, class: "list-group-item"
    %p
      %li= link_to "new", new_category_path, class:  "list-group-item"
    = render '/categories/categories', categories: @categories
